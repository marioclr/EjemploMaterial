<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mclr.mini.ejemplomaterial">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".EjemploMaterialActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TransicionEditarActivity"
            android:label="@string/titulo_activity_editar"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".EjemploMaterialActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EjemploMaterialActivity" />
        </activity>
        <activity
            android:name=".TransicionAgregarActivity"
            android:label="@string/titulo_activity_agregar"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".EjemploMaterialActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EjemploMaterialActivity" />
        </activity>
    </application>

</manifest>